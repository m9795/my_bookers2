<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>name</th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td>
          <%= link_to(book.book.user) do %>
            <%= image_tag book.book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.book.user.name, user_path(book.book.user) %></td>

        <td><%=  book.book.title %></td>
        <td><%= book.book.body %></td>
        <td>コメント数: <%= book.book.book_comments.count %></td>
        <td>閲覧数: <%= book.book.view_counts.count %></td>
        <td>Rate：
          <span id="star-rate-<%= book.id %>"></span>
          <script>
            $('#star-rate-<%= book.id %>').raty({
              size: 36,
              starOff: "<%= asset_path('star-off.png') %>",
              starOn: "<%= asset_path('star-on.png') %>",
              starHalf: "<%= asset_path('star-half.png') %>",
              half: true,
              readOnly: true,
              score: <%= book.book.rate %>,
            });
          </script>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
